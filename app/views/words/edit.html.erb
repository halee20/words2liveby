<!-- Validation failure messages -->
<% if @word.errors.any? %>
  <% @word.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Word #<%= @word.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_word/<%= @word.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for word -->
      <div class="form-group">
        <label for="word" class="control-label">
          Word
        </label>

        <textarea id="word" name="word" placeholder="Word" class="form-control" rows="3"><%= @word.word %></textarea>
      </div>

      <!-- Label and input for author -->
      <div class="form-group">
        <label for="author" class="control-label">
          Author
        </label>

        <input type="text" id="author" name="author" placeholder="Author" class="form-control" value="<%= @word.author %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @word.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Word
      </button>
      or
      <a href="/words/<%= @word.id %>">Cancel</a>
    </form>
  </div>
</div>
