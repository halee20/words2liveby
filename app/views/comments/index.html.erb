<div class="page-header">
  <center><h1>
    critiques
    <p><a href="/comments/new" class="btn btn-lg btn-success">New Comment</a></p>
  </h1><center>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Word</th>
        <th>Body</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.word.word %></td>
        <td><%= comment.body %></td>
        <td><%= comment.user.username %></td>
        <td>
          <a href="/comments/<%= comment.id %>" class="btn btn-primary">Show</a>
          <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
