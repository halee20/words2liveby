<div class="page-header">
  <center><h3><%= current_user.username %>'s likes</h3></center>
</div>

<% @likes.each do |like| %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading"><a href = "/users/<%= like.word.user_id %>"><%= like.word.user.username %></a></div>
      <div class="panel-body">

        <p><%= like.word.author %></p>
        <center><a href = "/words/<%= like.word.id %>"><%= like.word.word %></a></center>

        <% like.word.comments.each do |comment| %>
        <p><a href = "/users/<%= comment.user_id %>"><%= comment.user.username %></a> <%= comment.body %></p>

        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
